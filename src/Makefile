##VARIABLES
inc = ../inc
src = ../src
obj = ../obj
tmp = ../templates
paths = -I$(inc) -I$(tmp)
flags = -Wall -g
cc = g++
cmd = $(cc) -c $(flags) $(paths) $@.cpp -o $(obj)/$@.o


